{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.PeriodicBatching",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.OpenTelemetry",
      "Serilog.Enrichers.ClientInfo"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss}; (Correlation Id: {CorrelationId:lj}); {Level:lj}] {NewLine}Message: {Message:lj}; <source context:{SourceContext}>;{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://domitian.otel-collector:4318",
          "protocol": "httpProtobuf",
          "resourceAttributes": {
            "service.name": "DomitianApi",
            "service.version": "1.0.0"
          },
          "batchSizeLimit": 100,
          "bufferingTimeLimit": "0:01:00",
          "queueLimit": 1000
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      //"WithThreadId",
      //"WithTraceId",
      //"WithSpan",
      {
        "Name": "WithCorrelationId",
        "Args": {
          "headerName": "x-correlation-id",
          "addValueIfHeaderAbsence": true
        }
      }
    ],
    "Destructure": [
      {
        "Name": "With",
        "Args": { "policy": "domitian_api.Configuraion.CensuringDesctructurePolicy, domitian-api" }
      }
    ]
  }
}
