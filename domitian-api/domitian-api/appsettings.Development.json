{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      //"Serilog.Sinks.Seq",
      //"Serilog.Sinks.OpenTelemetry",
      "Serilog.Enrichers.ClientInfo"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss}; (Correlation Id: {CorrelationId:lj}); {Level:lj}] {NewLine}Message: {Message:lj}; <source context:{SourceContext}>;{NewLine}{Exception}"
              }
            }
          ]
        }
      }
      //{ "Name": "Seq" },
      //{ "Name": "OpenTelemetry" }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      {
        "Name": "WithCorrelationId",
        "Args": {
          "headerName": "x-correlation-id",
          "addValueIfHeaderAbsence": true
        }
      }
    ],
    "Destructure": [
      {
        "Name": "With",
        "Args": { "policy": "domitian_api.Configuraion.CensuringDesctructurePolicy, domitian-api" }
      }
    ]
  }
}
